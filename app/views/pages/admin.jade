extends ../layout

block content
	.container
		.row
			form.form-horizontal(method="POST", action="/admin/movie", enctype="multipart/form-data", role="form")

				.form-group
					label.col-sm-3.control-label 豆瓣同步(登录https://movie.douban.com/获取电影对应的Id)
					.col-sm-10
						input#douban.form-control(typ="text")

				- if(movie && movie._id)
					input(type="hidden", name="_id", value=movie._id)

				.form-group
					label.col-sm-3.control-label(for="inputCatetory") 电影分类
					.col-sm-10
						input#inputCatetory.form-control(type="text", name="catetoryName", value=movie.catetoryName)

				.form-group
					label.col-sm-3.control-label 分类选择
					- each cat in categories
						label.radio-inline
							- if(movie && movie._id)
								input(type="radio", name="category", value=cat._id, checked=cat._id.toString()===movie.category.toString())
							- else 
								input(type="radio", name="category", value=cat._id)
							| #{cat.name}

				.form-group
					label.col-sm-3.control-label(for="inputTitle") 电影名字
					.col-sm-10
						input#inputTitle.form-control(type="text", name="title", value=movie.title, required)
				.form-group
					label.col-sm-3.control-label(for="inputDoctor") 电影导演
					.col-sm-10
						input#inputDoctor.form-control(type="text", name="doctor", value=movie.doctor, required)
				.form-group
					label.col-sm-3.control-label(for="inputCountry") 国家
					.col-sm-10
						input#inputCountry.form-control(type="text", name="country", value=movie.country)
				.form-group
					label.col-sm-3.control-label(for="inputLanguage") 语种
					.col-sm-10
						input#inputLanguage.form-control(type="text", name="language", value=movie.language)
				.form-group
					label.col-sm-3.control-label(for="inputPoster") 海报地址
					.col-sm-10
						input#inputPoster.form-control(type="text", name="poster", value=movie.poster)
				.form-group
					label.col-sm-3.control-label(for="uploadPoster") 海报上传
					.col-sm-10
						input#uploadPoster(type="file", name="uploadPoster", accept="image/gif,image/jpeg,image/jpg,image/png,image/svg", required)
				.form-group
					label.col-sm-3.control-label(for="inputFlash") 片源地址
					.col-sm-10
						input#inputFlash.form-control(type="text", name="flash", value=movie.flash)
				.form-group
					label.col-sm-3.control-label(for="inputYear") 上映年代
					.col-sm-10
						input#inputYear.form-control(type="text", name="year", value=movie.year, required)
				.form-group
					label.col-sm-3.control-label(for="inputSummary") 电影简介
					.col-sm-10
						input#inputSummary.form-control(type="text", name="summary", value=movie.summary)
				.form-group
					.col-sm-offset-2.col-sm-10
					button.btn.btn-default(type="submit") 录入
					button.btn.btn-default(type="reset") cancel

	//- script(src="/js/admin.js")